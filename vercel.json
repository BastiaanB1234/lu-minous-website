{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "app/**/*.tsx": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/shop/(.*)",
      "destination": "/shop/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "redirects": [
    {
      "source": "https://shop.minous.app",
      "destination": "https://lu.minous.app/shop",
      "permanent": true
    },
    {
      "source": "https://shop.minous.app/(.*)",
      "destination": "https://lu.minous.app/shop/$1",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/shop/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
